%h4.h4.recipe-station
  = @recipe.station
%h1.h3.recipe-header
  = @recipe.name
  - favorite = current_user.recipes.find_by(id: @recipe.id) ? "color: rgb(244, 125, 66);" : "color: rgba(0, 0, 0, 0.29);"
  %i.circle.favorite.material-icons.m1{id: "favorite-#{@recipe.slug}", onclick: "favorite(event)", style: favorite, data: {uid: current_user.id, rid: @recipe.id}}
    star

.recipe-ingredients.m2
  %table.m3
    - @recipe.ingredients_with_quantities_and_units.each do |set|
      %tr.ingredient-set
        %td.ingredient
          = set[0]
        %td.quantity
          = set[1]
        %td.unit
          = set[2]

.instructions-container.m2
  %ol
    - @recipe.instructions.each do |step|
      %li
        = step

- if "chef plaform_admin".include?(current_role)
  .recipe-options.flex.justify-center.mb4
    = link_to edit_chef_restaurant_recipe_path(current_restaurant, slug: @recipe.slug) do
      = button_tag "Edit Recipe", class: "rounded m1 show-edit-recipe", type: "button"
