.welcome-header
  %h1
    Recipe Library
  .welcome-options
    .about.option
      %p About
      .hidden
        Test about KitchenKeeper
    .register.option
      %p Register
      .hidden
        = form_tag "/users", class: "hidden" do
          = email_field_tag :email, nil, placeholder: "your@email.com"
          = password_field_tag :password, nil, placeholder: "password"
          = password_field_tag :password_confirmation, nil, placeholder: "confirm password"
          = submit_tag "Register"
        \--- OR ---
        = link_to "#" do
          = image_tag "google_signin.png", size: "166x36"
    .login.option
      %p Log in
      .hidden
        = form_tag "/sessions" do
          = email_field_tag :login_email, nil, placeholder: "your@email.com"
          = password_field_tag :login_password, nil, placeholder: "password"
          = submit_tag "Log in"
